<% include ../partials/header%>

<div class="container">
    <h1 style="text-align: center; margin-top: 50px; margin-bottom: 50px;">Edit <%= campground.name %></h1>
    <div style="width: 350px; margin: 0 auto">
    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
      <div class="form-group">
        <label for="exampleInput">CampGround Name</label>
        <input type="text" name="campground[name]" class="form-control" id="exampleInput" value="<%= campground.name %>">
      </div>
      <div class="form-group">
        <label for="imgurl">Image</label>
        <input type="text" name="campground[image]" class="form-control" id="imgurl" value="<%= campground.image %>">
      </div>
      <div class="form-group">
        <label for="imgurl">Cost</label>
        <input type="number" name="campground[cost]" class="form-control" id="imgurl" value="<%= campground.cost %>" min="0.01" step="0.01">
      </div>
      <div class="form-group">
          <label for="location">Location</label>
          <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
      </div>
      <div class="form-group">
        <label for="imgurl">Description</label>
        <input type="text" name="campground[description]" class="form-control" id="imgurl" value="<%= campground.description %>">
      </div>
      <button type="submit" class="btn btn-primary btn-block">Submit</button>
    </form>
    <a href="/campgrounds">Go Back</a>
    </div>
    
</div>



<% include ../partials/footer%>